<h1>Books</h1>

<% @book.each do |book| %>

  <p>タイトル</p>
  <span><%= link_to book.title, book_path(book.id) %></span>
  <span><%= link_to book.body, book_path(book.id) %></span>

<% end %>



<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @book.each do |book| %>
  <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>Show</td>
        <td>Edit</td>
        <td>Destroy</td>
      </tr>
  </tbody>
  <% end %>
</table>



